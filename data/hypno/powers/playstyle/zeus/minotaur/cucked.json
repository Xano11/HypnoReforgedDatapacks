{
    "name":"Stunned",
    "description":"You're stunned and can no move.",
    "type": "origins:multiple",
    "res":{
        "type": "origins:resource",
        "min": 1,
        "max": 2,
        "start_value": 1,
        "hud_render": {
            "should_render": false
        }
    },

	"res_adjust":{
    	"type": "origins:self_action_when_hit",
    	"entity_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:change_resource",
    				"resource": "*:*_res",
   					"change": 1
				},
				{    
					"type": "origins:add_velocity",
                    "y": -100,
                    "space": "local_horizontal"
				}
			]
		}
    },

    "lose":{
        "type": "origins:action_on_land",
        "entity_action": {
            "type": "origins:if_else",
    		"condition": {
        		"type": "origins:resource",
    			"resource": "*:*_res",
    			"comparison": "==",
    			"compare_to": 1
    		},
    		"if_action": {
        		"type": "origins:execute_command",
                "command": "power remove @s hypno:playstyle/zeus/minotaur/cucked"
    		},
    		"else_action": {
        		"type": "origins:and",
    			"actions": [
       			{
            		"type": "origins:damage",
                      "amount": 1,
                      "source": {
                          "name": "cramming.player",
                          "bypasses_armor": true,
						  "unblockable": true
                      }
        		},
        		{    
            		"type":"origins:delay",
                    "ticks":15,
                    "action":
                    {
                    "type": "origins:execute_command",
                    "command": "power remove @s hypno:playstyle/zeus/minotaur/cucked"
                    }
        		}
    		]
		}
	}  
    },
    "hidden": true
}