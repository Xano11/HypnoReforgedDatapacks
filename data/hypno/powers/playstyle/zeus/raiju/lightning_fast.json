{
    "name":"Thunderous",
    "description":"You can toggle your Thunderous form using your [SECONDARY ABILITY KEY]. In this form, you are reduced to a ball of electricity allowing you to move faster. Using this form costs energy over time.",
    "type": "origins:multiple",
    "toggle":{
        "type": "origins:toggle",
        "active_by_default": false,
        "key": {
            "key": "key.origins.secondary_active"
        },
        "condition":
        {
            "type": "origins:and",
            "conditions": [{
            "type": "origins:power_active",
            "power": "hypno:playstyle/zeus/raiju/discharged",
            "inverted": true
        },
        {
            "type": "origins:resource",
            "resource": "hypno:playstyle/zeus/raiju/energetic_resource",
            "comparison": ">=",
            "compare_to": 100
        }
        ]
    }
    },
    "resource_use":{
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "hypno:playstyle/zeus/raiju/energetic_resource",
                    "change": -40
                },
                {
                    "type": "origins:execute_command",
                    "command": "scale set pehkui:step_height 2"
                }
            ]
        },
        "interval": 20,
        "condition": {
            "type": "origins:and",
            "conditions": [{
            "type": "origins:power_active",
            "power": "hypno:playstyle/zeus/raiju/lightning_fast_toggle"
        },
        {
            "type": "origins:resource",
            "resource": "hypno:playstyle/zeus/raiju/energetic_resource",
            "comparison": ">",
            "compare_to": 0
        }
        ]
    }
    },
    "step_height":{
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "scale set pehkui:step_height 1"
                }
            ]
        },
        "interval": 20,
        "condition": {
            "type": "origins:and",
            "conditions": [{
            "type": "origins:power_active",
            "power": "hypno:playstyle/zeus/raiju/lightning_fast_toggle",
            "inverted": true
            }
        ]
    }
    },
    "particles":{
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "execute at @s run particle dust_color_transition 0.54 0.99 1 1 1 0.95 0.24 ~ ~1 ~ 0.1 0.1 0.1 0.1 5"
                }
            ]
        },     
        "interval": 1,
        "condition": {
            "type": "origins:and",
            "conditions": [{
            "type": "origins:power_active",
            "power": "hypno:playstyle/zeus/raiju/lightning_fast_toggle"
        },
        {
            "type": "origins:resource",
            "resource": "hypno:playstyle/zeus/raiju/energetic_resource",
            "comparison": ">",
            "compare_to": 0
        }
        ]
    }
    },
    "invisibility":{
        "type": "origins:invisibility",
        "render_armor": false,
        "condition":  {
            "type": "origins:and",
            "conditions": [{
            "type": "origins:power_active",
            "power": "hypno:playstyle/zeus/raiju/lightning_fast_toggle"
        },
        {
            "type": "origins:resource",
            "resource": "hypno:playstyle/zeus/raiju/energetic_resource",
            "comparison": ">",
            "compare_to": 0
        }
        ]
    }
},
    "speed":{
        "type": "origins:conditioned_attribute",
        "modifier": {
            "name": "big speed",
            "attribute": "minecraft:generic.movement_speed",
            "value": 1.5,
            "operation": "multiply_total"
        },
        "condition":
        {
            "type": "origins:and",
